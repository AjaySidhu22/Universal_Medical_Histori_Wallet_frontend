// \frontend\src\components\ShareTokenGenerator.js
import React, { useState } from 'react';
import umhwApi from '../api/umhwApi';

function ShareTokenGenerator() {
    const [duration, setDuration] = useState('7d'); // Default to 7 days
    const [sharedWithEmail, setSharedWithEmail] = useState('');
    const [result, setResult] = useState(null);
    const [message, setMessage] = useState('');

    const handleSubmit = async (e) => {
        e.preventDefault();
        setMessage('Generating token...');
        setResult(null);

        try {
            const res = await umhwApi.post('/share', { 
                duration, 
                sharedWithEmail: sharedWithEmail || undefined // Only send if not empty
            });

            setMessage(res.data.message);
            setResult(res.data);

        } catch (err) {
            console.error("Token generation failed:", err.response?.data || err.message);
            setMessage(`âŒ Error: ${err.response?.data?.message || 'Failed to generate share link.'}`);
        }
    };

    return (
        <div style={{ padding: '20px', border: '1px solid #3c8dff', borderRadius: '8px', marginBottom: '30px', background: '#eaf4ff' }}>
            <h3>ğŸ”‘ Share Your Medical Records (Patient Only)</h3>

            <form onSubmit={handleSubmit} style={{ display: 'flex', flexDirection: 'column', gap: '10px' }}>
                <label>
                    Sharing Duration:
                    <select value={duration} onChange={(e) => setDuration(e.target.value)} style={{ marginLeft: '10px' }}>
                        <option value="1h">1 Hour</option>
                        <option value="1d">1 Day</option>
                        <option value="7d">7 Days</option>
                        <option value="30d">30 Days</option>
                    </select>
                </label>

                <label>
                    Share With Email (Optional for tracking):
                    <input 
                        type="email" 
                        value={sharedWithEmail} 
                        onChange={(e) => setSharedWithEmail(e.target.value)} 
                        placeholder="doctor@example.com" 
                        style={{ marginLeft: '10px', width: '300px' }}
                    />
                </label>

                <button type="submit" style={{ padding: '10px', background: '#3c8dff', color: 'white', border: 'none', borderRadius: '5px' }}>
                    Generate Secure Share Link
                </button>
            </form>

            <p style={{ marginTop: '10px', fontWeight: 'bold' }}>{message}</p>

            {result && (
                <div style={{ marginTop: '15px', padding: '10px', border: '1px solid #ccc', background: 'white' }}>
                    <h4>Share Link Generated!</h4>
                    <p>
                        **Copy and share this URL:**
                        <code style={{ display: 'block', background: '#f8f8f8', padding: '8px', overflowWrap: 'break-word', border: '1px solid #eee' }}>
                            {result.shareUrl}
                        </code>
                    </p>
                    <p style={{ fontSize: '0.9em', color: '#666' }}>Expires at: {new Date(result.expiresAt).toLocaleString()}</p>
                </div>
            )}
        </div>
    );
}

export default ShareTokenGenerator;